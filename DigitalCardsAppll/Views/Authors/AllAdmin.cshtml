@using DigitalCardsAppll.Models.Author
@model IEnumerable<AuthorAllViewModel>

@{ ViewBag.Title = "Authors"; }


<div class="container">
    <div class="section">
        <div class="row">
            <div class="col-md-10 offset-md-1">
                <div class="page-header text-center">
                    <h class="font-weight-bold font-italic">Authors</h>
                </div>          
                <div class="component">
                    <table class="table table-dark table-hover">
                        <thead class=" table-active">
                            <tr>
                                <th scope="col">Full Name</th>
                                <th scope="col">Image Url</th>
                                <th scope="col">Quote</th>
                                <th scope="col">Edit</th>
                                <th scope="col">Delete</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var author in Model)
                            {
                                <tr class="table-light">
                                    <td>@author.FullName</td>    
                                    <td>@author.ImageUrl</td> 
                                    <td>@author.PQuote</td> 
                                    <td>
                                        <a class="btn btn-block btn-warning text-white mb-3" href="/Authors/Edit?authorId=@author.Id">Edit</a>
                                    </td>
                                     <td>
                                        <a class="btn btn-block btn-dark text-white mb-3" href="/Authors/Delete?authorId=@author.Id">Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

