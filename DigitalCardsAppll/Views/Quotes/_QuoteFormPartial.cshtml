@model QuoteAddViewModel

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <h2 class="heading-margin text-center">@ViewBag.Title</h2>
        <form method="post">
            <div class="form-group">
                <label asp-for="AuthorName"></label>
                <input asp-for="AuthorName" class="form-control" placeholder="">
                <span asp-validation-for="AuthorName" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Year"></label>
                <input asp-for="Year" class="form-control" placeholder="">
                <span asp-validation-for="Year" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Genre"></label>
                <input asp-for="Genre" class="form-control" placeholder="">
                <span asp-validation-for="Genre" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description"></label>
                <input asp-for="Description" rows="4" class="form-control" placeholder="">
                <span asp-validation-for="Description" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="QNumber"></label>
                <input asp-for="QNumber" class="form-control" placeholder="">
                <span asp-validation-for="QNumber" class="small text-danger"></span>
            </div>
            <input class="btn btn-dark mt-3 justify-content-center" type="submit" value="Create" />
        </form>
    </div>
</div>
