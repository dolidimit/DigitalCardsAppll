@model CardAddAdminViewModel

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <h2 class="heading-margin text-center">Blank Card</h2>
        <form method="post">
            <div class="form-group">
                <label asp-for="Destination"></label>
                <input asp-for="Destination" class="form-control" placeholder="">
                <span asp-validation-for="Destination" class="small text-danger"></span>
            </div>
             <div class="form-group">
                <label asp-for="ImageUrl"></label>
                <input asp-for="ImageUrl" class="form-control" placeholder="">
                <span asp-validation-for="ImageUrl" class="small text-danger"></span>
            </div>
            <input class="btn btn-dark mt-3 justify-content-center" type="submit" value="Create" />
        </form>
    </div>
</div>

