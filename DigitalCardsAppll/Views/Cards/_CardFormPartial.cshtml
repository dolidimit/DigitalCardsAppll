@model CardAddViewModel

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <h2 class="heading-margin text-center">@ViewBag.Title</h2>
        <form method="post">
            <div class="form-group">
                <label asp-for="ImageUrl"></label>
                <input asp-for="ImageUrl" class="form-control" placeholder="">
                <span asp-validation-for="ImageUrl" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Destination"></label>
                <input asp-for="Destination" rows="4" class="form-control" placeholder="">
                <span asp-validation-for="Destination" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Title"></label>
                <input asp-for="Title" class="form-control" placeholder="">
                <span asp-validation-for="Title" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Receiver"></label>
                <input asp-for="Receiver" class="form-control" placeholder="">
                <span asp-validation-for="Receiver" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Model"></label>
                <input asp-for="Model" class="form-control" placeholder="">
                <span asp-validation-for="Model" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SNumber"></label>
                <input asp-for="SNumber" class="form-control" placeholder="">
                <span asp-validation-for="SNumber" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="QNumber"></label>
                <input asp-for="QNumber" class="form-control" placeholder="">
                <span asp-validation-for="QNumber" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PublicView"></label>
                <input asp-for="PublicView">
                <span asp-validation-for="PublicView" class="small text-danger"></span>
            </div>
            <input class="btn btn-dark mt-3 justify-content-center" type="submit" value="Create" />
        </form>
    </div>
</div>
