@model IEnumerable<CardAllAdminViewModel>

<div class="container">
    <div class="section">
        <div class="row">
            <div class="col-md-10 offset-md-1">
                <div class="page-header text-center">
                    <h class="font-weight-bold font-italic tex-center">Cards Information</h>
                </div>
                <div class="component">
                    <table class="table table-dark table-hover">
                        <thead class=" table-active">
                            <tr>
                                <th scope="col">Destination</th>
                                <th scope="col">ImageUrl</th>
                                <th scope="col" class="text-center">Edit</th>
                                <th scope="col" class="text-center">Delete</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var card in Model)
                            {
                            <tr class="table-light">
                                <td>@card.Destination</td>
                                <td>@card.ImageUrl.ToString()</td>
                                <td>
                                    <a class="btn btn-block btn-warning text-white mb-3" href="/Cards/EditAdmin?cardId=@card.Id">Edit</a>
                                </td>
                                <td>
                                    <a class="btn btn-block btn-dark text-white mb-3" href="/Cards/Delete?cardId=@card.Id">Delete</a>
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>



