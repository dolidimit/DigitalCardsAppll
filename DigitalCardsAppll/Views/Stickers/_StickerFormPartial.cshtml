@model StickerAddViewModel

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <h2 class="heading-margin text-center">@ViewBag.Title</h2>
        <form method="post">
            <div class="form-group">
                <label asp-for="Title"></label>
                <input asp-for="Title" class="form-control" placeholder="">
                <span asp-validation-for="Title" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageUrl"></label>
                <input asp-for="ImageUrl" class="form-control" placeholder="">
                <span asp-validation-for="ImageUrl" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Topic"></label>
                <input asp-for="Topic" rows="4" class="form-control" placeholder="">
                <span asp-validation-for="Topic" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ArtistName"></label>
                <input asp-for="ArtistName" class="form-control" placeholder="">
                <span asp-validation-for="ArtistName" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Size"></label>
                <input asp-for="Size" class="form-control" placeholder="">
                <span asp-validation-for="Size" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SNumber"></label>
                <input asp-for="SNumber" class="form-control" placeholder="">
                <span asp-validation-for="SNumber" class="small text-danger"></span>
            </div>
            <input class="btn btn-dark mt-3 justify-content-center" type="submit" value="Create" />
        </form>
    </div>
</div>
