@model IEnumerable<StickerAllAdminViewModel>

<div class="container">
    <div class="section">
        <div class="row">
            <div class="col-md-10 offset-md-1">
                <div class="page-header text-center">
                    <h class="font-weight-bold font-italic">Stickers Information</h>
                </div>
                <div class="component">
                    <table class="table table-dark table-hover">
                        <thead class=" table-active">
                            <tr>
                                <th scope="col">Title</th>
                                <th scope="col">Image Url<th>
                                <th scope="col">Artist</th>
                                <th scope="col">Topic</th>
                                <th scope="col">Size</th>
                                <th scope="col">SNumber</th>
                                <th scope="col">Edit</th>
                                <th scope="col">Details</th>
                                <th scope="col">Delete</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var stick in Model)
                            {
                                <tr class="table-light">
                                    <td>@stick.Title</td>
                                    <td>@stick.ImageUrl</td>
                                    <td>@stick.ArtistName</td>
                                    <td>@stick.Topic</td>
                                    <td>@stick.Size</td>
                                    <td>@stick.SNumber</td>
                                    <td>
                                        <a class="btn btn-block btn-warning text-white mb-3" href="/Quotes/Edit?quoteId=@stick.Id">Edit</a>
                                    </td>
                                    <td>
                                        <a class="btn btn-block btn-success text-white mb-3" href="/Quotes/Details?quoteId=@stick.Id">Details</a>
                                    </td>
                                    <td>
                                        <a class="btn btn-block btn-dark text-white mb-3" href="/Quotes/Delete?quoteId=@stick.Id">Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

